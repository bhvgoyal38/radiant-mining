<%- include("partials/header") %>
<link rel="stylesheet" type="text/css" href="../stylesheets/index.css">
<link rel="stylesheet" type="text/css" href="../stylesheets/product.css">
<div id="content">
	<div class="container py-4">
		<div class="card p-4 text-dark" style="background: #f1f1f1">
<h1 class="text-center mb-3">
	<%= result.name %>
</h1>
			<div class="row">
				<div class="col-lg-6 text-center">
				<div class="justify-content-center d-flex">
	<img id="myImg" src="/images/<%= result.img %>" alt="<%= result.name %>" style="max-width:100%">
				</div>
					<a class="btn btn-radiant mt-3" style="color: white;" href="mailto:radiantminingtech@gmail.com?subject=Product Query for <%= result.name %>&body=Hi, I wanted to know the details for the product <%= result.name %>. Kindly send quotations for the same.">Enquiry</a>
				</div>
				<div class="col-lg-6 pt-4">
					
	<p>
		<%= result.content %>
	</p>
	<p>
		<%= result.content2 %>
	</p>
				<% if(result.features.length>0){ %>
			<p>
				<b>Features:</b>
			</p>
			<ul>
			<% for(var i=0; i<result.features.length; i++){ %>
				<li><%= result.features[i] %></li>
			<% } %>
			</ul>
					<% } %>
				</div>
			</div>
		</div>
	</div>
</div>
<div id="myModal" class="modal">
 <span class="close">&times;</span>

  <img class="modal-content" id="img01">

  <div id="caption"></div>
</div>
<%- include("partials/footer") %>